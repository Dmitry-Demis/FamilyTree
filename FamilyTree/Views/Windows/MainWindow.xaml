<Window x:Class="FamilyTree.Presentation.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:viewModels1="clr-namespace:FamilyTree.Presentation.ViewModels"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:FamilyTree.DAL.Model;assembly=FamilyTree.DAL"
        d:DataContext="{d:DesignInstance Type=viewModels1:MainWindowViewModel}"
        Title="{Binding Title}" Height="450" Width="950"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource Locator}}"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="#623ED0">
            <MenuItem Header="Главное меню">
                <!-- Submenu for Create Actions -->
                <MenuItem Header="Создать">
                    <!-- Create Person Menu Item -->
                    <MenuItem Header="Человека" Command="{Binding CreatePersonCommand}">
                    </MenuItem>

                    <!-- Add Parent Menu Item -->
                    <MenuItem Header="Добавить семейную связь" Command="{Binding AddParentCommand}">
                    </MenuItem>
                    <MenuItem Header="Добавить супружескую связь" Command="{Binding AddSpouseCommand}">
                    </MenuItem>
                </MenuItem>

                <!-- Remove Person Menu Item -->
                <MenuItem Header="Удалить человека" Command="{Binding RemovePersonCommand}">
                </MenuItem>
            </MenuItem>
        </Menu>


        <wv2:WebView2 Grid.Row="1" Name="WebView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="Window_Loaded"/>
    </Grid>
</Window>
