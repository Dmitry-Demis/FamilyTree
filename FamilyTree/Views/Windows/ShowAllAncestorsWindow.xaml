<Window x:Class="FamilyTree.Presentation.Views.Windows.ShowAllAncestorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Все предки" Height="600" Width="800"
        DataContext="{Binding ShowAllAncestorsViewModel, Source={StaticResource Locator}}"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Выбор человека -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Человек:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox ItemsSource="{Binding People}" 
                      SelectedItem="{Binding SelectedPerson, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      Width="200" Margin="5"/>
            <Button Content="Показать предков" 
                    Command="{Binding ShowAllAncestorsCommand}" 
                    Margin="5"/>
        </StackPanel>

        <Canvas Background="LightGray" Grid.Row="0">
            <!-- Стрелочки -->
            <ItemsControl ItemsSource="{Binding Links}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Line X1="{Binding StartX}" 
                              Y1="{Binding StartY}" 
                              X2="{Binding EndX}" 
                              Y2="{Binding EndY}" 
                              Stroke="Black" 
                              StrokeThickness="2" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Узлы -->
            <ItemsControl ItemsSource="{Binding TreeNodes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1" Background="White" Width="120" Height="50">
                            <TextBlock Text="{Binding Name}" 
                                       TextWrapping="Wrap" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>

    </Grid>
</Window>
